import React, { useState, useRef, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import {
    Send, Sparkles, Trash2, ChevronDown, Moon, Sun, Menu, X,
    Plus, MessageSquare, Bot, User, Copy, Check, Loader2, AlertCircle
} from 'lucide-react';
import { useAI, ModelType } from '../contexts/AIContext';
import { sendChatMessage, QUICK_ACTIONS } from '../services/AIService';

// Model badge colors for dark mode
const ModelColors: Record<ModelType, string> = {
    'gemini': 'text-blue-400',
    'gemma-12b': 'text-amber-400',
    'gemma-4b': 'text-emerald-400',
    'meta': 'text-purple-400',
    'gemini-flash': 'text-cyan-400'
};

export const KaizenAI: React.FC = () => {
    const {
        model, setModel,
        chatHistory, addMessage, clearHistory,
        models, theme, toggleTheme
    } = useAI();

    const [inputValue, setInputValue] = useState('');
    const [isLoading, setIsLoading] = useState(false);
    const [error, setError] = useState<string | null>(null);
    const [copiedId, setCopiedId] = useState<string | null>(null);
    const [showModelSelector, setShowModelSelector] = useState(false);
    const [sidebarOpen, setSidebarOpen] = useState(true);

    const messagesEndRef = useRef<HTMLDivElement>(null);
    const inputRef = useRef<HTMLTextAreaElement>(null);

    // Removed auto-scroll - page stays stable

    // Handle send message
    const handleSend = async () => {
        if (!inputValue.trim() || isLoading) return;

        const userMessage = inputValue.trim();
        setInputValue('');
        setError(null);

        // Add user message
        addMessage({
            role: 'user',
            content: userMessage,
            model
        });

        setIsLoading(true);

        try {
            const response = await sendChatMessage({
                message: userMessage,
                personality: 'teacher',
                model,
                chatHistory
            });

            if (response.error) {
                setError(response.error);
            } else {
                addMessage({
                    role: 'assistant',
                    content: response.content,
                    model
                });
            }
        } catch (err) {
            setError('Failed to get response. Please try again.');
        } finally {
            setIsLoading(false);
        }
    };

    // Handle key press
    const handleKeyPress = (e: React.KeyboardEvent) => {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            handleSend();
        }
    };

    // Copy message to clipboard
    const copyToClipboard = async (text: string, id: string) => {
        await navigator.clipboard.writeText(text);
        setCopiedId(id);
        setTimeout(() => setCopiedId(null), 2000);
    };

    const currentModel = models.find(m => m.id === model);
    const isDark = theme === 'dark';

    return (
        <div className={`flex pt-16 ${isDark ? 'bg-[#212121] text-[#ececec]' : 'bg-white text-gray-900'}`} style={{ height: 'calc(100vh - 4rem)' }}>
            {/* Sidebar */}
            <AnimatePresence>
                {sidebarOpen && (
                    <motion.div
                        initial={{ x: -300 }}
                        animate={{ x: 0 }}
                        exit={{ x: -300 }}
                        className={`w-64 flex-shrink-0 flex flex-col border-r ${isDark ? 'bg-[#202123] border-[#4e4f60]' : 'bg-gray-50 border-gray-200'}`}
                    >
                        {/* Sidebar Header */}
                        <div className="p-4 flex items-center justify-between border-b border-gray-700">
                            <div className="flex items-center gap-2">
                                <Sparkles className="w-5 h-5 text-violet-500" />
                                <span className="font-semibold">Kaizen AI</span>
                            </div>
                            <button
                                onClick={() => setSidebarOpen(false)}
                                className="lg:hidden p-1.5 rounded hover:bg-white/10"
                            >
                                <X className="w-5 h-5" />
                            </button>
                        </div>

                        {/* New Chat Button */}
                        <div className="p-3">
                            <button
                                onClick={() => clearHistory()}
                                className={`w-full flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors ${isDark ? 'hover:bg-white/10' : 'hover:bg-gray-200'}`}
                            >
                                <Plus className="w-5 h-5" />
                                <span className="font-medium">New chat</span>
                            </button>
                        </div>

                        {/* Chat History */}
                        <div className="flex-1 overflow-y-auto px-3">
                            {chatHistory.length > 0 && (
                                <div className="space-y-1">
                                    <button className={`w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors ${isDark ? 'bg-white/10' : 'bg-gray-200'}`}>
                                        <MessageSquare className="w-4 h-4" />
                                        <span className="text-sm truncate">Current Chat</span>
                                    </button>
                                </div>
                            )}
                        </div>

                        {/* Sidebar Footer */}
                        <div className="p-3 border-t border-gray-700 space-y-1">
                            <button
                                onClick={toggleTheme}
                                className={`w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors ${isDark ? 'hover:bg-white/10' : 'hover:bg-gray-200'}`}
                            >
                                {isDark ? <Sun className="w-4 h-4" /> : <Moon className="w-4 h-4" />}
                                <span className="text-sm">{isDark ? 'Light' : 'Dark'} mode</span>
                            </button>
                            <button
                                onClick={clearHistory}
                                className={`w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors text-red-400 ${isDark ? 'hover:bg-white/10' : 'hover:bg-gray-200'}`}
                            >
                                <Trash2 className="w-4 h-4" />
                                <span className="text-sm">Clear conversations</span>
                            </button>
                        </div>
                    </motion.div>
                )}
            </AnimatePresence>

            {/* Main Chat Area */}
            <div className="flex-1 flex flex-col">
                {/* Top Bar */}
                <div className={`h-14 border-b ${isDark ? 'border-[#4e4f60]' : 'border-gray-200'} flex items-center px-4`}>
                    {!sidebarOpen && (
                        <button
                            onClick={() => setSidebarOpen(true)}
                            className="p-2 rounded-lg hover:bg-white/10 mr-3"
                        >
                            <Menu className="w-5 h-5" />
                        </button>
                    )}

                    {/* Model Selector (ChatGPT Style) */}
                    <div className="relative mx-auto">
                        <button
                            onClick={() => setShowModelSelector(!showModelSelector)}
                            className={`flex items-center gap-2 px-3 py-1.5 rounded-lg transition-colors ${isDark ? 'hover:bg-white/10' : 'hover:bg-gray-100'}`}
                        >
                            <span className={`text-sm font-medium ${ModelColors[model]}`}>
                                {currentModel?.label}
                            </span>
                            <ChevronDown className="w-4 h-4" />
                        </button>

                        <AnimatePresence>
                            {showModelSelector && (
                                <motion.div
                                    initial={{ opacity: 0, y: 10, scale: 0.95 }}
                                    animate={{ opacity: 1, y: 0, scale: 1 }}
                                    exit={{ opacity: 0, y: 10, scale: 0.95 }}
                                    className={`absolute top-full mt-2 ${isDark ? 'bg-[#2f2f2f]' : 'bg-white'} rounded-xl shadow-xl border ${isDark ? 'border-[#4e4f60]' : 'border-gray-200'} overflow-hidden z-50 min-w-[280px]`}
                                >
                                    {models.map((m) => (
                                        <button
                                            key={m.id}
                                            onClick={() => {
                                                setModel(m.id);
                                                setShowModelSelector(false);
                                            }}
                                            className={`w-full px-4 py-3 text-left transition-colors ${isDark ? 'hover:bg-white/10' : 'hover:bg-gray-100'} ${model === m.id ? (isDark ? 'bg-white/10' : 'bg-gray-100') : ''}`}
                                        >
                                            <div className="flex items-center justify-between">
                                                <span className={`font-medium text-sm ${ModelColors[m.id]}`}>{m.label}</span>
                                                {model === m.id && <Check className="w-4 h-4 text-violet-500" />}
                                            </div>
                                            <p className={`text-xs mt-0.5 ${isDark ? 'text-gray-400' : 'text-gray-500'}`}>{m.description}</p>
                                        </button>
                                    ))}
                                </motion.div>
                            )}
                        </AnimatePresence>
                    </div>
                </div>

                {/* Messages Area */}
                <div className="flex-1 overflow-y-auto">
                    <div className="max-w-3xl mx-auto px-4 py-6">
                        {chatHistory.length === 0 ? (
                            <div className="h-full flex flex-col items-center justify-center text-center px-4">
                                <div className={`w-16 h-16 rounded-2xl ${isDark ? 'bg-white/10' : 'bg-gray-100'} flex items-center justify-center mb-6`}>
                                    <Bot className={`w-8 h-8 ${isDark ? 'text-violet-400' : 'text-violet-600'}`} />
                                </div>
                                <h2 className={`text-2xl font-bold mb-2 ${isDark ? 'text-[#ececec]' : 'text-gray-900'}`}>How can I help you today?</h2>
                                <p className={`max-w-md mb-8 ${isDark ? 'text-gray-400' : 'text-gray-600'}`}>
                                    Ask me anything about Python, Data Science, or anything else!
                                </p>

                                {/* Quick Actions */}
                                <div className="flex flex-wrap justify-center gap-2">
                                    {QUICK_ACTIONS.slice(0, 3).map((action, idx) => (
                                        <button
                                            key={idx}
                                            onClick={() => setInputValue(action.prompt)}
                                            className={`px-4 py-2 text-sm rounded-lg transition-colors ${isDark ? 'bg-white/10 hover:bg-white/20 text-gray-300' : 'bg-gray-100 hover:bg-gray-200 text-gray-700'}`}
                                        >
                                            {action.label}
                                        </button>
                                    ))}
                                </div>
                            </div>
                        ) : (
                            <>
                                {chatHistory.map((msg) => (
                                    <motion.div
                                        key={msg.id}
                                        initial={{ opacity: 0, y: 10 }}
                                        animate={{ opacity: 1, y: 0 }}
                                        className={`mb-6 flex gap-4 ${msg.role === 'user' ? 'flex-row-reverse' : ''}`}
                                    >
                                        {msg.role === 'assistant' && (
                                            <div className={`w-8 h-8 rounded-lg ${isDark ? 'bg-violet-600' : 'bg-violet-500'} flex items-center justify-center shrink-0`}>
                                                <Bot className="w-5 h-5 text-white" />
                                            </div>
                                        )}

                                        <div className="flex-1">
                                            <div className={`rounded-2xl px-4 py-3 ${msg.role === 'user'
                                                ? (isDark ? 'bg-white/10' : 'bg-gray-100')
                                                : 'bg-transparent'}`}
                                            >
                                                <div className="prose prose-sm max-w-none">
                                                    {msg.role === 'assistant' ? (
                                                        <div dangerouslySetInnerHTML={{
                                                            __html: msg.content
                                                                .replace(/```(\w+)?\n([\s\S]*?)```/g, '<pre><code class="language-$1">$2</code></pre>')
                                                                .replace(/`([^`]+)`/g, '<code>$1</code>')
                                                                .replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>')
                                                                .replace(/\*([^*]+)\*/g, '<em>$1</em>')
                                                                .replace(/^# (.+)$/gm, '<h1>$1</h1>')
                                                                .replace(/^## (.+)$/gm, '<h2>$1</h2>')
                                                                .replace(/^### (.+)$/gm, '<h3>$1</h3>')
                                                                .replace(/^- (.+)$/gm, '<li>$1</li>')
                                                                .replace(/\n/g, '<br/>')
                                                        }} />
                                                    ) : (
                                                        <p className="whitespace-pre-wrap">{msg.content}</p>
                                                    )}
                                                </div>
                                            </div>

                                            {msg.role === 'assistant' && (
                                                <button
                                                    onClick={() => copyToClipboard(msg.content, msg.id)}
                                                    className={`mt-2 text-xs ${isDark ? 'text-gray-400 hover:text-gray-300' : 'text-gray-500 hover:text-gray-700'} transition-colors`}
                                                >
                                                    {copiedId === msg.id ? (
                                                        <Check className="w-3.5 h-3.5 inline text-green-500" />
                                                    ) : (
                                                        <Copy className="w-3.5 h-3.5 inline" />
                                                    )}
                                                </button>
                                            )}
                                        </div>

                                        {msg.role === 'user' && (
                                            <div className={`w-8 h-8 rounded-lg ${isDark ? 'bg-white/10' : 'bg-gray-200'} flex items-center justify-center shrink-0`}>
                                                <User className={`w-5 h-5 ${isDark ? 'text-gray-300' : 'text-gray-600'}`} />
                                            </div>
                                        )}
                                    </motion.div>
                                ))}

                                {/* Loading Indicator */}
                                {isLoading && (
                                    <motion.div
                                        initial={{ opacity: 0 }}
                                        animate={{ opacity: 1 }}
                                        className="flex gap-4 mb-6"
                                    >
                                        <div className={`w-8 h-8 rounded-lg ${isDark ? 'bg-violet-600' : 'bg-violet-500'} flex items-center justify-center`}>
                                            <Bot className="w-5 h-5 text-white" />
                                        </div>
                                        <div className={`rounded-2xl px-4 py-3 flex items-center gap-2 ${isDark ? 'bg-white/10' : 'bg-gray-100'}`}>
                                            <Loader2 className="w-4 h-4 animate-spin text-violet-500" />
                                            <span className={`text-sm ${isDark ? 'text-gray-400' : 'text-gray-600'}`}>Thinking...</span>
                                        </div>
                                    </motion.div>
                                )}

                                {/* Error Message */}
                                {error && (
                                    <motion.div
                                        initial={{ opacity: 0 }}
                                        animate={{ opacity: 1 }}
                                        className="flex items-center gap-2 px-4 py-3 bg-red-500/10 border border-red-500/20 rounded-xl text-red-500 text-sm mb-6"
                                    >
                                        <AlertCircle className="w-4 h-4" />
                                        {error}
                                    </motion.div>
                                )}

                                <div ref={messagesEndRef} />
                            </>
                        )}
                    </div>
                </div>

                {/* Input Area */}
                <div className={`border-t ${isDark ? 'border-[#4e4f60]' : 'border-gray-200'} p-4`}>
                    <div className="max-w-3xl mx-auto">
                        <div className={`flex items-end gap-3 rounded-2xl ${isDark ? 'bg-[#40414f]' : 'bg-gray-100'} px-4 py-3`}>
                            <textarea
                                ref={inputRef}
                                value={inputValue}
                                onChange={(e) => setInputValue(e.target.value)}
                                onKeyDown={handleKeyPress}
                                placeholder="Ask anything..."
                                className={`flex-1 bg-transparent resize-none focus:outline-none ${isDark ? 'text-[#ececec] placeholder:text-gray-500' : 'text-gray-900 placeholder:text-gray-400'}`}
                                rows={1}
                                style={{ minHeight: '24px', maxHeight: '120px' }}
                            />
                            <button
                                onClick={handleSend}
                                disabled={!inputValue.trim() || isLoading}
                                className="p-2 rounded-lg bg-violet-600 text-white disabled:opacity-50 disabled:cursor-not-allowed hover:bg-violet-700 transition-colors"
                            >
                                {isLoading ? (
                                    <Loader2 className="w-5 h-5 animate-spin" />
                                ) : (
                                    <Send className="w-5 h-5" />
                                )}
                            </button>
                        </div>
                        <p className={`text-xs text-center mt-2 ${isDark ? 'text-gray-500' : 'text-gray-400'}`}>
                            Kaizen AI can make mistakes. Check important info.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    );
};
